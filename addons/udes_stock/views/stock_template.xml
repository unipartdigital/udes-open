<odoo>
    <data>
        <!-- Change the log message because we have changed product_uom_qty string from "Demand" to "Quantity" -->
        <template id="message_head" inherit_id="stock.message_head">
            <xpath expr="//strong[contains(text(), 'The initial demand has been updated.')]" position="replace">
                <strong>The quantity has been updated.</strong>
            </xpath>
        </template>
        <template id="message_body" inherit_id="stock.message_body">
            <xpath expr="//li[contains(text(), 'Quantity :')]" position="replace">
                <t t-if="move.state != 'done'">
                    <t t-if="'product_uom_qty' in vals">
                        <li>
                            Quantity : 
                            <t t-esc="round(move.product_uom_qty, move.product_uom.u_decimal_places)"/> -&gt; 
                            <t t-esc="round(vals.get('product_uom_qty'), move.product_uom.u_decimal_places)"/>
                        </li>
                    </t>
                </t>
                <t t-if="'qty_done' in vals">
                    <li>
                        Quantity : <t t-esc="move.qty_done"/> -&gt; <t t-esc="round(vals.get('qty_done'), move.product_uom.u_decimal_places)"/>
                    </li>
                </t>
            </xpath>
        </template>
    </data>
</odoo>
